<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{% block title %}{% endblock title %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/lightbox.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/jquery-ui.min.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/style_gallery.css') }}" />
        <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}" />

    {% endblock %}
</head>
<body>
    {% block header %}
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation"><a href="{{ path('home') }}">Home</a></li>
                    <li role="presentation"><a href="{{ path('mars') }}">Mars</a></li>
                    <li role="presentation"><a href="{{ path('gallery') }}">Gallery</a></li>
                </ul>
            </nav>
            <h3 class="text-muted">{% block project %}{% endblock project %}</h3>
        </div>
    {% endblock header %}
    {% block content %}{% endblock content%}
    {% block footer %}
        <footer class="footer">
            <p>&copy; Aleksandr Panteleev</p>
        </footer>
    </div>
    {% endblock footer %}

    {% block javascripts %}
        <script src="{{ asset('js/jquery-2.1.4.min.js') }}"></script>
        <script src="{{ asset('js/jquery-ui.min.js') }}"></script>
        <script src="{{ asset ('js/bootstrap.js') }}"></script>
    {% endblock %}
</body>
</html>